<?xml version="1.0"?>
<workflow-app xmlns="uri:oozie:workflow:0.4" name="referenceextraction_patent_main">

    <parameters>
        <property>
            <name>input_document_text</name>
            <description>input document text</description>
        </property>
        <property>
            <name>input_extracted_document_metadata_merged_with_original</name>
            <description>input document metadata containing document authors</description>
        </property>
        <property>
            <name>input_patent</name>
            <description>input patent</description>
        </property>
        <property>
            <name>output_document_to_patent</name>
            <description>output document to patent</description>
        </property>
        <property>
            <name>sparkDriverMemory</name>
            <description>memory for driver process</description>
        </property>
        <property>
            <name>sparkExecutorMemory</name>
            <description>memory for individual executor</description>
        </property>
        <property>
            <name>sparkExecutorCores</name>
            <description>number of cores used by single executor</description>
        </property>
    </parameters>

    <start to="fork_input"/>

    <fork name="fork_input">
        <path start="input_patent_transformer"/>
        <path start="input_document_text_author_merger"/>
    </fork>

    <action name="input_patent_transformer">
        <spark xmlns="uri:oozie:spark-action:0.2">
            <prepare>
                <delete path="${workingDir}/patent"/>
            </prepare>
            <master>yarn-cluster</master>
            <mode>cluster</mode>
            <name>patent-referenceextraction-input-transformer</name>
            <class>eu.dnetlib.iis.wf.referenceextraction.patent.input.PatentReferenceExtractionInputTransformerJob
            </class>
            <jar>${oozieTopWfApplicationPath}/lib/iis-wf-referenceextraction-${projectVersion}.jar</jar>
            <spark-opts>
                --executor-memory ${sparkExecutorMemory}
                --executor-cores ${sparkExecutorCores}
                --driver-memory ${sparkDriverMemory}
            </spark-opts>
            <arg>-inputPath=${input_patent}</arg>
            <arg>-outputPath=${workingDir}/patent</arg>
        </spark>
        <ok to="join_input"/>
        <error to="fail"/>
    </action>

    <action name="input_document_text_author_merger">
        <spark xmlns="uri:oozie:spark-action:0.2">
            <prepare>
                <delete path="${workingDir}/document_text_with_authors"/>
            </prepare>
            <master>yarn-cluster</master>
            <mode>cluster</mode>
            <name>patent-referenceextraction-input-document-text-author-merger</name>
            <class>eu.dnetlib.iis.wf.referenceextraction.patent.input.PatentReferenceExtractionInputDocumentTextAuthorMerger</class>
            <jar>${oozieTopWfApplicationPath}/lib/iis-wf-referenceextraction-${projectVersion}.jar</jar>
            <spark-opts>
                --executor-memory ${sparkExecutorMemory}
                --executor-cores ${sparkExecutorCores}
                --driver-memory ${sparkDriverMemory}
            </spark-opts>
            <arg>-inputDocumentTextPath=${input_document_text}</arg>
            <arg>-inputExtractedDocumentMetadataMergedWithOriginalPath=${input_extracted_document_metadata_merged_with_original}</arg>
            <arg>-outputPath=${workingDir}/document_text_with_authors</arg>
        </spark>
        <ok to="join_input"/>
        <error to="fail"/>
    </action>

    <join name="join_input" to="sqlite_builder"/>

    <action name="sqlite_builder">
        <sub-workflow>
            <app-path>${wf:appPath()}/sqlite_builder</app-path>
            <propagate-configuration/>
            <configuration>
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/sqlite_builder/working_dir</value>
                </property>
                <property>
                    <name>input_patent</name>
                    <value>${workingDir}/patent</value>
                </property>
                <property>
                    <name>output_patent_db</name>
                    <value>${workingDir}/patents.db</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="main_sqlite"/>
        <error to="fail"/>
    </action>

    <action name="main_sqlite">
        <sub-workflow>
            <app-path>${wf:appPath()}/main_sqlite</app-path>
            <propagate-configuration/>
            <configuration>
                <property>
                    <name>workingDir</name>
                    <value>${workingDir}/main_sqlite/working_dir</value>
                </property>
                <property>
                    <name>input_document_text_with_authors</name>
                    <value>${workingDir}/document_text_with_authors</value>
                </property>
                <property>
                    <name>input_patent_db</name>
                    <value>${workingDir}/patents.db</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>

    <end name="end"/>
</workflow-app>
