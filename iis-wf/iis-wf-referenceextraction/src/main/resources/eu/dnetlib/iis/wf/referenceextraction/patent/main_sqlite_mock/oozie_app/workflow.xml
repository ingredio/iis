<?xml version="1.0"?>
<workflow-app xmlns="uri:oozie:workflow:0.4" name="referenceextraction_patent_main_sqlite_mock">

    <parameters>
        <property>
            <name>input_document_text</name>
            <description>input document text</description>
        </property>
        <property>
            <name>input_patent_db</name>
            <description>patents SQLite DB path</description>
        </property>
        <property>
            <name>output_document_to_patent</name>
            <description>output document to patent</description>
        </property>
    </parameters>

    <global>
        <job-tracker>${jobTracker}</job-tracker>
        <name-node>${nameNode}</name-node>
        <configuration>
            <property>
                <name>mapreduce.job.queuename</name>
                <value>${queueName}</value>
            </property>
            <property>
                <name>oozie.launcher.mapred.job.queue.name</name>
                <value>${oozieLauncherQueueName}</value>
            </property>
        </configuration>
    </global>

    <start to="static-outcome-producer"/>

    <action name="static-outcome-producer">
        <java>
            <main-class>eu.dnetlib.iis.common.java.ProcessWrapper</main-class>
            <arg>eu.dnetlib.iis.common.java.jsonworkflownodes.Producer</arg>
            <arg>-C{document_to_patent,
                eu.dnetlib.iis.referenceextraction.patent.schemas.DocumentToPatent,
                eu/dnetlib/iis/wf/referenceextraction/patent/main_sqlite_mock/document_to_patent.json}
            </arg>
            <arg>-Odocument_to_patent=${output_document_to_patent}</arg>
        </java>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <kill name="fail">
        <message>Unfortunately, the process failed -- error message:
            [${wf:errorMessage(wf:lastErrorNode())}]
        </message>
    </kill>

    <end name="end"/>
</workflow-app>
